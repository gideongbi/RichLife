{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*).css",
      "headers": { "Content-Type": "text/css" },
      "dest": "/assets/$1.css"
    },
    {
      "src": "/assets/(.*).js",
      "headers": { "Content-Type": "application/javascript" },
      "dest": "/assets/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
